#include <iostream>
using namespace std;

int main() {
int a;
cout<<"enter the month no. "<<"\n";
cin>>a;
if(a==1 || a==3 || a==5 || a==7 || a==8 || a==10 || a==12)
{ cout<<" the no. of days is 31 ";
}
else if( a==2 )
{ cout<<" the no. of days is 28 ";
}
else if(a==4 || a==6 || a==9 || a==11 )
{ cout<<" the no. of days is 30 ";
}
return 0;
}
